<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybirkbeckapp">

    <!-- App Name and Icon to show on device screens and when Downloading from App store -->
    <application
        android:icon="@mipmap/ic_app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- MainActivity (Login Page) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- ProfileActivity (Student Page)-->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- StaffActivity (Staff Page)-->
        <activity
            android:name=".StaffActivity"
            android:exported="false" />

        <!-- WelcomeActivity (Welcome Page) -->
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>
</manifest>