<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/primaryColor"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- University ID Picture -->

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/university_id_picture"
        android:src="@drawable/ic_profile" />

    <!-- University/library barcode -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="text = University/library barcode"
        android:src="@drawable/ic_univeristy_id_barcode" />
</LinearLayout>